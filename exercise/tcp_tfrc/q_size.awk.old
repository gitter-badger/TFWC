BEGIN {
       granul = 2.0;
       count = time = 0;
       printf "" > "q_size.rands";
       print 0,0 >> "q_size.rands";
      }
                                                                                
{

#-------------------------------------------/
#
#This is aggregated and combined TCP/TFRC Q size
#
#-------------------------------------------/

if ($1 == "+") {
	count++;	

	if (($2 - time) > granul) {
	        time += granul;
		print time , count >> "q_size.rands";
	}
}

if ($1 == "-" || $1 == "d") {
	count--;	

	if (($2 - time) > granul) {
	        time += granul;
		print time , count >> "q_size.rands";
        }
}

}

END {
    }

